<div class="wrapper_with_padding">
  <div id="doc_show">
    <h2 class="title">
      <%= @doc.title %>
    </h2>
    <p>
      <%= simple_format(@doc.content) %>
    </p>
    <div class="buttons">
      <%= link_to "Update" ,edit_doc_path(@doc), class: "button"%>
      <%= link_to "Delete" ,doc_path(@doc), :method => :delete, data: {confirm: "Are you sure ?"}, class: "button"%>
    </div>
  </div>
</div>
