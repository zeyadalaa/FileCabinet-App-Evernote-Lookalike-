<div class="wrapper_with_padding">
  <div id="docs" class="clearfix">
    <% unless @docs.blank? %>
      <% @docs.each do |doc| %>
        <a href="<%= url_for(doc) %>">
          <div class="doc">
            <p class="title">
              <%= doc.title%>
            </p>
            <p class="date">
              <%= time_ago_in_words(doc.created_at) %>
            </p>
            <p class="content">
              <%= truncate(doc.content, length:50) %>
            </p>
          </div>
        </a>
      <% end %>
    <%else%>
      <h2>Create Doc!</h2>
      <p>Start Creating Documents and Organizing Your Life</p>
      <%= button_to "Create Docment" ,new_doc_path , :method => :get %>
    <% end %>
  </div>
</div>
